<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/marginBottom_cv"
    card_view:cardCornerRadius="@dimen/cardCornerRadius_cv">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMascota"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_cv"
            android:src="@drawable/vexels"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_nombre"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibHuesoB"
                android:layout_width="@dimen/height_nombre"
                android:layout_height="match_parent"
                android:src="@drawable/icons8_dog_bone_100"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNombre"
                android:layout_width="@dimen/width_nombre"
                android:layout_height="match_parent"
                android:textSize="@dimen/tamaño_n"
                android:text="@string/nombre_m"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCont"
                android:layout_width="@dimen/height_nombre"
                android:layout_height="match_parent"
                android:textSize="@dimen/tamaño_n"
                android:text="@string/cont_v"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivHuesoN"
                android:layout_width="@dimen/height_nombre"
                android:layout_height="match_parent"
                android:src="@drawable/icons8_dog_bone_amarillo"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>